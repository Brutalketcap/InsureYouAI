@model Contact

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">İletişim Bilgileri Güncellme Sayfası</h5>
        </div>
        <form method="post">
            <input type="hidden" asp-for="ContactId" />
            <label>Telefon Numarası</label>
            <input type="text" asp-for="Phone" rows"5" class="form-control" />
            <br />
            <label>Emali Adresi</label>
            <input type="email" asp-for="Email" rows"5" class="form-control" />
            <br />
            <label>Adres Bilgisi</label>
            <input type="text" asp-for="Address" rows"5" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea typeof="text" rows="3" asp-for="Description" class="form-control"></textarea>
            <br />
            <button class="btn btn-primary">Bilgileri Kaydet</button>
        </form>
    </div>
</div>