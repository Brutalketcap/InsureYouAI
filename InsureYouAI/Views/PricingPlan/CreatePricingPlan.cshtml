@model PricingPlan
@{
    ViewData["Title"] = "CreatePricingPlan";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Fiyat Plan Girişi Sayfası</h5>
        </div>
        <form method="post">
            <label>Başlık</label>
            <input type="text" asp-for="Title" rows"5" class="form-control" />
            <br />
            <label>Fiyat</label>
            <input type="text" asp-for="Price" rows"5" class="form-control" />
            <br />
            <button class="btn btn-primary">Plan Kaydet</button>
        </form>
    </div>
</div>