@model AboutItem
@{
    ViewData["Title"] = "CreateAboutItem";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Hakkımızda Bölümü Madde Girişi Sayfası</h5>
        </div>
        <form method="post">
            <label>Başlık</label>
            <textarea type="text" asp-for="Detail" rows"5" class="form-control"></textarea>
            <br />
            <button class="btn btn-primary">Hakkımızda Madde Oluştur</button>
        </form>
    </div>
</div